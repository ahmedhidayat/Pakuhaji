<%= render 'homes/navigation'%>
<%= form_for @customer do |f| %>
<div class="page-header">
<h3>Pesan Paket Wisata Pakuhaji</h3>		
</div>
<div class="col-sm-2">
	</div>
<div class="col-sm-10">
	<div class="col-lg-8">
				<div class="panel panel-default">
					<div class="panel-heading">Data Pemesan</div>
					<br/>					
	<form class="form-horizontal" role="form">
		<div class="form-group">
			<%= f.label :name, "Nama : ", :class => "control-label col-sm-3" %>
			<div class="col-sm-8">
				<%= f.text_field :name, :class => 'form-control', :placeholder=>'Masukan Nama'%>
				<%= @customer.errors[:name].first unless @customer.errors[:name].blank? %>				
			</div>
			<br/><br/>
			<%= f.label :address, "Alamat: ", :class => "control-label col-sm-3" %>
			<div class="col-sm-8">
				<%= f.text_area :address, :rows => '3', :class => 'form-control', :placeholder=>'Masukan Alamat'%>
				<%= @customer.errors[:address].first unless @customer.errors[:address].blank? %>				
			</div>
			<br/><br/><br/><br/><br/>
			<%= f.label :telephone, "Telepon: ", :class => "control-label col-sm-3" %>
			<div class="col-sm-8">
				<%= f.telephone_field :telephone, :class => 'form-control', :placeholder=>'Masukan No Telepon', onkeypress: "return isNumberKey(event)"%>
				<%= @customer.errors[:telephone].first unless @customer.errors[:telephone].blank? %>				
			</div>
				<br/><br/>
			<%= f.label :email, "Email: ", :class => "control-label col-sm-3" %>
			<div class="col-sm-8">
				<%= f.email_field :email, :class => 'form-control', :placeholder=>'Masukan Email'%>
				<%= @customer.errors[:email].first unless @customer.errors[:email].blank? %>				
			</div>     
			<br/><br/>
			<%= f.label :vacation_packet_id, "Pilih Paket: ", :class => "control-label col-sm-3" %>
			<div class="col-sm-8">
			<%= select_tag(:vacation_packet_id, options_for_select(@vacationpacket), :class => "form-control") %>	
			</div>
			<br/><br/><br/>			
			<center> <%= f.submit "Selanjutnya", :class => 'btn btn-primary'%></center>
			
			<% end %>
			
					
			</div>
				</form>
			</div>
		</div>
	</div>
	<script type="text/javascript">
	function isNumberKey(evt){
    var charCode = (evt.which) ? evt.which : event.keyCode
    if (charCode > 31 && (charCode < 48 || charCode > 57))
        return false;
    return true;
} 
	</script>
