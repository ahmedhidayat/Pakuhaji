<div class="col-sm-10 col-sm-offset-2 col-lg-10 col-lg-offset-2 main">			
<br/><br/><br/>
	<div class="col-xs-12">
              
<div class="row">
			<div class="col-lg-12">
				<div class="panel panel-default">
					<div class="panel-heading">List Slider</div>
					<br/>
					<div class="container col-sm-2 side pull-right ">	
                <%= link_to 'Tambah Slider', new_slider_path,:class => 'btn btn-primary  fa fa-trash-o ' %>
                </div>
                <br/><br/>
                <div class="container col-sm-2 side pull-right ">
                <%= paginate @slider, :window => 5 %>
                </div>
                <br/><br/>
					<div class="panel-body">
						<table data-toggle="table" data-url="tables/data1.json"
						data-select-item-name="toolbar1"  data-sort-name="name" data-sort-order="desc">
                    
                    <thead>
                      <tr>
                        <th>Judul</th>
                        <th>Deskripsi</th>
                        <th>Gambar</th>
                        <th>Operasi</th>

                      </tr>
                    </thead>
                    <tbody>
                    	<% @slider.each do |slider|%>
                              <tr>
                               	<td><%= slider.title.truncate(20) %></td>
        						<td><%= slider.content.truncate(20) %></td>
        						<td><%=link_to image_tag(slider.picture.url, :height=>"50")%></td>
                   			 <td><div class="btn-group" role="group">
                                  		
                                  		<%= link_to 'EDIT', edit_slider_path(slider.id),:class => 'btn btn-primary  fa fa-trash-o ' %>
       									<%= link_to "Hapus", slider,:class => 'btn btn-danger  fa fa-trash-o ', :confirm => 'Are you sure?', :method => :delete%> </div>
                                  </td>
                   			 </tr>
                   			 
                    		<% end %>
                    	</tbody>
                    <tfoot>
                      
                    </tfoot>
                  </table>
                </div><!-- /.box-body -->
              </div><!-- /.box -->

            </div><!-- /.col -->
          </div><!-- /.row -->
        </section><!-- /.content -->
      </div><!-- /.content-wrapper -->


    <!-- jQuery 2.1.3 -->
    <script src="../../plugins/jQuery/jQuery-2.1.3.min.js"></script>
    <!-- Bootstrap 3.3.2 JS -->
    <script src="../../bootstrap/js/bootstrap.min.js" type="text/javascript"></script>
    <!-- DATA TABES SCRIPT -->
    <script src="../../plugins/datatables/jquery.dataTables.js" type="text/javascript"></script>
    <script src="../../plugins/datatables/dataTables.bootstrap.js" type="text/javascript"></script>
    <!-- SlimScroll -->
    <script src="../../plugins/slimScroll/jquery.slimscroll.min.js" type="text/javascript"></script>
    <!-- FastClick -->
    <script src='../../plugins/fastclick/fastclick.min.js'></script>
    <!-- AdminLTE App -->
    <script src="../../dist/js/app.min.js" type="text/javascript"></script>
    <!-- AdminLTE for demo purposes -->
    <script src="../../dist/js/demo.js" type="text/javascript"></script>
    <!-- page script -->
    <script type="text/javascript">
      $(function () {
        $("#example1").dataTable();
        $('#example2').dataTable({
          "bPaginate": true,
          "bLengthChange": false,
          "bFilter": false,
          "bSort": true,
          "bInfo": true,
          "bAutoWidth": false
        });
      });
    </script>

  </body>
</html>