<%= render 'admins/navigation'%>
<%= render 'admins/sidebar'%>
<br/><br/><br/>
<%= form_for @packet do |f| %>
<div class="col-sm-2">
	</div>
<div class="col-sm-6">
		<div class="col-lg-12">
				<div class="panel panel-default">
					<div class="panel-heading">Tambah Paket</div>
					<br/>
	<form class="form-horizontal" role="form">
		<div class="form-group">
			<%= f.label :title, "Nama Paket:", :class => "control-label col-sm-2" %>
			<div class="col-sm-10">
				<%= f.text_field :title, :class => 'form-control', :placeholder=>'Masukan Nama Paket'%>
				<br/>
			</div>
			<%= f.label :content, "Deskripsi:", :class => "control-label col-sm-2" %>
			<div class="col-sm-10">
				<%= f.text_area :content, :class => 'form-control', :placeholder=>'Masukan Deskripsi'%>				
			<br/>
			</div>					
			<%= f.label :picture, "Gambar: ", :class => "control-label col-sm-2" %>
			<div class="col-sm-10">   
				<%= f.file_field :picture%>
			</div>				
			<br/><br/><br/>
				<%= f.submit "Simpan", :class => 'btn btn-default'%>
					</div>
				</form>
			</div>
		</div>
	</div>
	
<% end %>

