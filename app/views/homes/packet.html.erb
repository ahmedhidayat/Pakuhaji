<%= render 'navigation'%>
<div class="page-header">
<h3>Daftar Paket Pakuhaji</h3>	
</div>
 <div class="container">
	<div class="row">
	<% @packet.each do |packet| %>
	<div class="col-xs-12 col-sm-6 col-md-3 col-lg-3 text-center">									
			<div class="panel panel-default">
					<div class="panel-heading">
						<%= packet.title %></div>	
	<%= link_to image_tag(packet.picture.url(:thumb)),packet.picture.url(:original), class: "fancybox"%>
	<p><%= packet.content %></p>	
	<%= link_to 'Unduh',packet.picture.url(:original) %>
					</div>						
				</div>					
			<% end %>
		</div>
	</div>
	<%= paginate @packet, :window => 4 %>
<%= render 'footer'%>
