<div class="col-sm-10 col-sm-offset-2 col-lg-10 col-lg-offset-2 main">			
	<br/><br/><br/>
	<div class="col-xs-12">
           
                
<div class="row">
			<div class="col-lg-12">
				<div class="panel panel-default">
					<div class="panel-heading">List Berita</div>
					<br/>
					<div class="container col-sm-2 side pull-right ">	
                <%= link_to 'Tambah Berita', new_article_path,:class => 'btn btn-primary  fa fa-trash-o ' %>
                </div>
                <div class="container col-sm-2 side pull-right ">
                <%= paginate @article, :window => 5 %>
                </div>
                <br/><br/>
					<div class="panel-body">
						<table data-toggle="table" data-url="tables/data1.json"
						data-select-item-name="toolbar1"  data-sort-name="name" data-sort-order="desc">
                    
                    <thead>
                      <tr>
                        <th>Judul</th>
                        <th>Isi Berita</th>
                        <th>Gambar</th>
                        <th>Operasi</th>

                      </tr>
                    </thead>
                    <tbody>
                    	<% @article.each do |article|%>
                              <tr>
                               	<td><%= article.title.truncate(20) %></td>
        						<td><%= article.content.truncate(20) %></td>
        						<td><%=link_to image_tag(article.picture.url(:thumb)), article.picture.url(:original), class: "fancybox"%></td>
                   			 <td><div class="btn-group" role="group">
                                  		
                                  		<%= link_to 'EDIT', edit_article_path(article.id),:class => 'btn btn-primary  fa fa-trash-o ' %>
       									<%= link_to "Hapus", article,:class => 'btn btn-danger  fa fa-trash-o ', :confirm => 'Are you sure?', :method => :delete%> </div>
                                  </td>
                   			 </tr>
                   			 
                    		<% end %>
                    	</tbody>
                    <tfoot>
                      
                    </tfoot>
                  </table>
                </div><!-- /.box-body -->
              </div><!-- /.box -->

            </div><!-- /.col -->
          </div><!-- /.row -->
   </div>
   </div>
   </div>
   </div>
   
